# ============================================================================
# Account Log Cleaner Configuration
# Copy this file to .env and fill in with your actual values
# IMPORTANT: Never commit .env file with real credentials to version control
# ============================================================================

# File Paths
# Input directory containing log files (ValidationOk*.txt, ValidationError*.txt)
LOGS_INPUT_PATH=./data/input

# Output directory for processed/archived files
LOGS_OUTPUT_PATH=./data/processed

# Directory for pickle backup files
PICKLES_PATH=./data/pickles

# ============================================================================
# Database Configuration - SQL Server
# ============================================================================

# Database host/IP address
DB_HOST=localhost

# Database port (default SQL Server: 1433)
DB_PORT=1433

# Database username
DB_USER=sa

# Database password (use strong password in production)
DB_PASSWORD=YourSecurePassword123!

# Database name
DB_NAME=AccountLogs

# Database schema (default: dbo)
DB_SCHEMA=dbo

# ODBC Driver name (must be installed on system)
# Options: "ODBC Driver 17 for SQL Server", "ODBC Driver 18 for SQL Server"
DB_DRIVER=ODBC Driver 17 for SQL Server

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/account_cleaner.log

# Log format (Python logging format)
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s

# ============================================================================
# Processing Configuration
# ============================================================================

# Batch size for processing
BATCH_SIZE=1000

# Chunk size for database insertion (larger = faster but more memory)
CHUNK_SIZE=5000

# Number of worker threads for parallel processing
MAX_WORKERS=4

# ============================================================================
# Feature Flags
# ============================================================================

# Enable pickle file backup (True/False)
ENABLE_PICKLE=True

# Enable database insertion (True/False)
ENABLE_DB_INSERT=True

# Dry run mode - process files without inserting to database (True/False)
DRY_RUN=False
